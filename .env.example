# Server
PORT=3000
NODE_ENV=development

# LLM Provider Configuration
# Choose one: anthropic, deepseek, groq
LLM_PROVIDER=deepseek
LLM_MAX_TOKENS=8192

# Anthropic (required if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-sonnet-4-20250514

# DeepSeek (required if LLM_PROVIDER=deepseek)
DEEPSEEK_API_KEY=sk-...
DEEPSEEK_MODEL=deepseek-chat

# DeepSeek Dynamic Model Selection
# Set to 'true' to automatically choose between models based on task complexity
DEEPSEEK_DYNAMIC_MODEL=true
# Model for simple tasks (typos, docs, formatting) - faster and cheaper
DEEPSEEK_SIMPLE_MODEL=deepseek-chat
# Model for complex tasks (features, refactoring, debugging) - better reasoning
DEEPSEEK_COMPLEX_MODEL=deepseek-reasoner

# Groq (required if LLM_PROVIDER=groq)
GROQ_API_KEY=gsk_...
GROQ_MODEL=llama-3.3-70b-versatile

# GitHub App
GITHUB_APP_ID=123456
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----..."

# Redis
REDIS_URL=redis://localhost:6379

# Workspace
WORKSPACE_BASE_PATH=/tmp/ai-coder-workspaces

# Agent
MAX_AGENT_TURNS=50
