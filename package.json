{
  "name": "ai-coder",
  "version": "1.0.0",
  "description": "Automated AI coding API that receives task descriptions via webhook, uses Claude AI to understand tasks, search GitHub repos, write code, and create PRs automatically",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "start:worker": "node --env-file=.env dist/jobs/worker.js",
    "dev": "tsx watch src/index.ts",
    "dev:worker": "tsx watch src/jobs/worker.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "vitest run",
    "test:e2e:watch": "vitest watch",
    "test:e2e:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:webhook": "test/scripts/send-webhook.sh",
    "test:monitor": "tsx test/scripts/monitor-job.ts",
    "test:list": "tsx test/scripts/list-jobs.ts",
    "test:cleanup": "tsx test/scripts/cleanup-jobs.ts",
    "test:callback": "tsx test/scripts/callback-server.ts",
    "test:checkpoints": "tsx test/scripts/list-checkpoints.ts",
    "test:resume": "tsx test/scripts/resume-checkpoint.ts",
    "test:inspect": "tsx test/scripts/inspect-checkpoint.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.40.0",
    "@fastify/cors": "^10.0.0",
    "@octokit/auth-app": "^7.1.0",
    "@octokit/core": "^6.1.0",
    "@octokit/rest": "^21.0.0",
    "bullmq": "^5.30.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.2.0",
    "ioredis": "^5.4.0",
    "nanoid": "^5.0.0",
    "openai": "^6.21.0",
    "pino": "^9.5.0",
    "simple-git": "^3.27.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^4.0.18",
    "ioredis-mock": "^8.13.1",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "testcontainers": "^11.11.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
